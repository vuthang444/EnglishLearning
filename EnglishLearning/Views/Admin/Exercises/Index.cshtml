@model List<CommonLib.Entities.Exercise>

@{
    ViewData["Title"] = "Quản lý bài tập";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var lesson = ViewBag.Lesson as CommonLib.Entities.Lesson;
}

<div>
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>Quản lý bài tập</h2>
            <p class="text-muted mb-0">Bài học: <strong>@lesson?.Title</strong> - Kỹ năng: <strong>@lesson?.Skill?.Name</strong></p>
        </div>
        <div>
            <a href="@Url.Action("Index", "Lessons")" class="btn btn-secondary">Quay lại</a>
            <a href="@Url.Action("Create", new { lessonId = lesson?.Id })" class="btn btn-primary">Thêm bài tập mới</a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Câu hỏi</th>
                            <th>Loại</th>
                            <th>Thứ tự</th>
                            <th>Số câu trả lời</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var exercise in Model)
                        {
                            <tr>
                                <td>@exercise.Id</td>
                                <td>@(exercise.Question.Length > 50 ? exercise.Question.Substring(0, 50) + "..." : exercise.Question)</td>
                                <td>
                                    @switch (exercise.Type)
                                    {
                                        case CommonLib.Entities.ExerciseType.MultipleChoice:
                                            <span class="badge bg-primary">Trắc nghiệm</span>
                                            break;
                                        case CommonLib.Entities.ExerciseType.FillInBlank:
                                            <span class="badge bg-info">Điền vào chỗ trống</span>
                                            break;
                                        case CommonLib.Entities.ExerciseType.TrueFalse:
                                            <span class="badge bg-warning">Đúng/Sai</span>
                                            break;
                                        case CommonLib.Entities.ExerciseType.Essay:
                                            <span class="badge bg-success">Tự luận</span>
                                            break;
                                        case CommonLib.Entities.ExerciseType.Audio:
                                            <span class="badge bg-danger">Nghe</span>
                                            break;
                                        case CommonLib.Entities.ExerciseType.Speaking:
                                            <span class="badge bg-dark">Nói</span>
                                            break;
                                    }
                                </td>
                                <td>@exercise.Order</td>
                                <td>@(exercise.Answers?.Count ?? 0)</td>
                                <td>
                                    @if (exercise.IsActive)
                                    {
                                        <span class="badge bg-success">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Tạm dừng</span>
                                    }
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", new { id = exercise.Id })" class="btn btn-sm btn-warning">
                                        Sửa
                                    </a>
                                    <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Bạn có chắc chắn muốn xóa bài tập này?');">
                                        <input type="hidden" name="id" value="@exercise.Id" />
                                        <input type="hidden" name="lessonId" value="@lesson?.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                                    </form>
                                </td>
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted">Chưa có bài tập nào</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

