@model List<CommonLib.Entities.Skill>

@{
    ViewData["Title"] = "Quản lý kỹ năng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div>
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Quản lý kỹ năng</h2>
        <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">Quay lại</a>
    </div>

    <div class="row">
        @foreach (var skill in Model)
        {
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@skill.Name</h5>
                        <p class="card-text">@skill.Description</p>
                        <p class="text-muted small">
                            <strong>Trạng thái:</strong> 
                            @if (skill.IsActive)
                            {
                                <span class="badge bg-success">Hoạt động</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Tạm dừng</span>
                            }
                        </p>
                    </div>
                    <div class="card-footer bg-transparent">
                        <a href="@Url.Action("Index", "Lessons", new { skillId = skill.Id })" class="btn btn-sm btn-primary">
                            Xem bài học
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

