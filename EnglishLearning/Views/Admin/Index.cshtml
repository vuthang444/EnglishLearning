@model List<CommonLib.Entities.Skill>

@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div>
    <h2 class="mb-4">Quản trị hệ thống học tiếng Anh</h2>

    <div class="row">
        @foreach (var skill in Model)
        {
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@skill.Name</h5>
                        <p class="card-text text-muted">@skill.Description</p>
                    </div>
                    <div class="card-footer bg-transparent">
                        <a href="@Url.Action("Index", "Lessons", new { skillId = skill.Id })" class="btn btn-primary w-100">
                            Quản lý bài học
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="mt-4">
        <a href="@Url.Action("Index", "Skills")" class="btn btn-outline-secondary">Quản lý kỹ năng</a>
    </div>
</div>

