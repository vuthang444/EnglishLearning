@model List<CommonLib.Entities.Lesson>

@{
    ViewData["Title"] = "Quản lý Writing";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div>
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>Quản lý Writing</h2>
            <p class="text-muted mb-0">Kỹ năng viết - Quản lý bài học và bài tập</p>
        </div>
        <div>
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="bi bi-pencil-square"></i> Tạo bài viết mới
            </a>
        </div>
    </div>

    <!-- Thống kê -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">Tổng số bài học</h5>
                    <h2 class="mb-0">@ViewBag.TotalLessons</h2>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">Bài học đang hoạt động</h5>
                    <h2 class="mb-0">@ViewBag.ActiveLessons</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Danh sách bài học -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Danh sách bài học</h5>
        </div>
        <div class="card-body">
            @if (Model == null || !Model.Any())
            {
                <p class="text-muted">Chưa có bài học nào.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tiêu đề</th>
                                <th>Chủ đề</th>
                                <th>Cấp độ</th>
                                <th>Giới hạn từ</th>
                                <th>Thời gian (phút)</th>
                                <th>Trạng thái</th>
                                <th>Ngày tạo</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var lesson in Model.OrderBy(l => l.Order))
                            {
                                <tr>
                                    <td>@lesson.Id</td>
                                    <td>
                                        <strong>@lesson.Title</strong>
                                        @if (!string.IsNullOrEmpty(lesson.Description))
                                        {
                                            <br><small class="text-muted">@lesson.Description</small>
                                        }
                                    </td>
                                    <td>@(lesson.WritingTopic ?? "-")</td>
                                    <td>
                                        <span class="badge bg-info">@(lesson.WritingLevel ?? "-")</span>
                                    </td>
                                    <td>@(lesson.WordLimit?.ToString() ?? "Không giới hạn")</td>
                                    <td>@(lesson.TimeLimitMinutes?.ToString() ?? "Không giới hạn")</td>
                                    <td>
                                        @if (lesson.IsActive)
                                        {
                                            <span class="badge bg-success">Hoạt động</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Tạm dừng</span>
                                        }
                                    </td>
                                    <td>@lesson.CreatedAt.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("Detail", new { id = lesson.Id })" class="btn btn-sm btn-info" title="Xem chi tiết">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Edit", new { id = lesson.Id })" class="btn btn-sm btn-warning" title="Sửa">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form asp-action="Delete" asp-route-id="@lesson.Id" method="post" class="d-inline" 
                                                  onsubmit="return confirm('Bạn có chắc chắn muốn xóa bài học này?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-danger" title="Xóa">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>


