@model CommonLib.DTOs.WritingPassageDto

@{
    ViewData["Title"] = "Sửa bài viết";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var difficultyLevels = new List<string> { "A1", "A2", "B1", "B2", "C1", "C2" };
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2>Sửa bài viết</h2>
            <hr />

            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@ViewContext.RouteData.Values["id"]" />

                <div class="row">
                    <div class="col-md-8">
                        <div class="card mb-3">
                            <div class="card-header">
                                <h5>Thông tin cơ bản</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label asp-for="Title" class="form-label">Tiêu đề <span class="text-danger">*</span></label>
                                    <input asp-for="Title" class="form-control" required />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Description" class="form-label">Mô tả</label>
                                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="WritingTopic" class="form-label">Chủ đề <span class="text-danger">*</span></label>
                                    <input asp-for="WritingTopic" class="form-control" required />
                                    <span asp-validation-for="WritingTopic" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="WritingPrompt" class="form-label">Đề bài Writing Task 2 <span class="text-danger">*</span></label>
                                    <textarea asp-for="WritingPrompt" class="form-control" rows="6" required></textarea>
                                    <span asp-validation-for="WritingPrompt" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="WritingHints" class="form-label">Gợi ý phát triển ý tưởng</label>
                                    <textarea asp-for="WritingHints" class="form-control" rows="4"></textarea>
                                    <span asp-validation-for="WritingHints" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card mb-3">
                            <div class="card-header">
                                <h5>Cấu hình</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label asp-for="WritingLevel" class="form-label">Cấp độ</label>
                                    <select asp-for="WritingLevel" class="form-select">
                                        @foreach (var level in difficultyLevels)
                                        {
                                            <option value="@level">@level</option>
                                        }
                                    </select>
                                    <span asp-validation-for="WritingLevel" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="WordLimit" class="form-label">Giới hạn số từ</label>
                                    <input asp-for="WordLimit" class="form-control" type="number" min="100" max="1000" />
                                    <span asp-validation-for="WordLimit" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="TimeLimitMinutes" class="form-label">Thời gian giới hạn (phút)</label>
                                    <input asp-for="TimeLimitMinutes" class="form-control" type="number" min="15" max="120" />
                                    <span asp-validation-for="TimeLimitMinutes" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <div class="form-check">
                                        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                        <label asp-for="IsActive" class="form-check-label">Kích hoạt</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Lưu thay đổi
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Hủy</a>
                </div>
            </form>
        </div>
    </div>
</div>


