@model List<CommonLib.Entities.Lesson>
@{
    ViewData["Title"] = "Bài tập Reading";
    var submissions = ViewBag.Submissions as Dictionary<int, CommonLib.Entities.Submission> ?? new Dictionary<int, CommonLib.Entities.Submission>();
    var exerciseCounts = ViewBag.LessonExerciseCounts as Dictionary<int, int> ?? new Dictionary<int, int>();
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-2">
                <i class="bi bi-book"></i> Bài tập Reading
            </h2>
            <p class="text-muted">Luyện tập kỹ năng đọc hiểu tiếng Anh với các bài tập đa dạng</p>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Chưa có bài tập nào.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var lesson in Model)
            {
                var submission = submissions.ContainsKey(lesson.Id) ? submissions[lesson.Id] : null;
                var exerciseCount = exerciseCounts.ContainsKey(lesson.Id) ? exerciseCounts[lesson.Id] : 0;

                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title mb-0">@lesson.Title</h5>
                                @if (submission != null)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i> Đã làm
                                    </span>
                                }
                            </div>
                            
                            @if (!string.IsNullOrEmpty(lesson.Description))
                            {
                                <p class="card-text text-muted small">@lesson.Description</p>
                            }

                            <div class="mb-3">
                                <small class="text-muted">
                                    <i class="bi bi-list-ol"></i> @exerciseCount câu hỏi
                                </small>
                                @if (!string.IsNullOrEmpty(lesson.ReadingLevel))
                                {
                                    <br>
                                    <small class="text-muted">
                                        <i class="bi bi-bar-chart"></i> Cấp độ: @lesson.ReadingLevel
                                    </small>
                                }
                            </div>

                            @if (submission != null)
                            {
                                <div class="mb-3">
                                    <div class="progress" style="height: 8px;">
                                        @{
                                            var percentage = submission.MaxScore > 0 
                                                ? (submission.Score * 100.0 / submission.MaxScore) 
                                                : 0;
                                        }
                                        <div class="progress-bar bg-success" role="progressbar" 
                                             style="width: @percentage%"
                                             aria-valuenow="@percentage" 
                                             aria-valuemin="0" 
                                             aria-valuemax="100">
                                        </div>
                                    </div>
                                    <small class="text-muted">
                                        Điểm: @submission.Score/@submission.MaxScore 
                                        (@Math.Round(percentage, 1)%)
                                    </small>
                                </div>
                            }
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            @if (submission != null)
                            {
                                <div class="d-grid gap-2">
                                    <a href="/Reading/Exercise/@lesson.Id" class="btn btn-primary">
                                        <i class="bi bi-arrow-repeat"></i> Làm lại
                                    </a>
                                    <a href="/Reading/Result/@submission.Id" class="btn btn-outline-secondary btn-sm">
                                        <i class="bi bi-eye"></i> Xem kết quả
                                    </a>
                                </div>
                            }
                            else
                            {
                                <a href="/Reading/Exercise/@lesson.Id" class="btn btn-primary w-100">
                                    <i class="bi bi-play-circle"></i> Bắt đầu làm bài
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.15) !important;
    }
    
    .card-title {
        color: #1E3A5F;
        font-weight: 600;
    }
    
    .btn-primary {
        background-color: #4A90E2;
        border-color: #4A90E2;
    }
    
    .btn-primary:hover {
        background-color: #357ABD;
        border-color: #357ABD;
    }
</style>

