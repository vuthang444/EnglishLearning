@model CommonLib.DTOs.SpeakingExerciseDto

@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-mic-fill"></i> @Model.Title
                    </h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="alert alert-info">
                            <strong>Mô tả:</strong> @Model.Description
                        </div>
                    }

                    <div class="mb-4">
                        <h5>Chủ đề: <span class="text-primary">@Model.Topic</span></h5>
                        @if (!string.IsNullOrEmpty(Model.DifficultyLevel))
                        {
                            <span class="badge bg-info">Cấp độ: @Model.DifficultyLevel</span>
                        }
                        <span class="badge bg-secondary ms-2">Thời gian: @Model.TimeLimitSeconds giây</span>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ReferenceText))
                    {
                        <div class="card mb-4">
                            <div class="card-header">
                                <h6 class="mb-0">Văn bản mẫu (Reference Text)</h6>
                            </div>
                            <div class="card-body">
                                <p class="mb-0" id="referenceText">@Html.Raw(Model.ReferenceText.Replace("\n", "<br>"))</p>
                            </div>
                        </div>
                    }

                    <!-- Audio Recorder -->
                    <div class="card mb-4 sticky-top" style="top: 20px; z-index: 1000; background: white;">
                        <div class="card-header bg-light">
                            <h6 class="mb-0">
                                <i class="bi bi-mic"></i> Ghi âm bài nói
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-md-8">
                                    <div class="mb-3">
                                        <div class="d-flex align-items-center mb-2">
                                            <button id="btnRecord" class="btn btn-danger btn-lg me-3">
                                                <i class="bi bi-record-circle"></i> <span id="recordText">Bắt đầu ghi âm</span>
                                            </button>
                                            <button id="btnStop" class="btn btn-secondary btn-lg me-3" disabled>
                                                <i class="bi bi-stop-circle"></i> Dừng
                                            </button>
                                            <button id="btnPlay" class="btn btn-info btn-lg" disabled>
                                                <i class="bi bi-play-circle"></i> Nghe lại
                                            </button>
                                        </div>
                                        <div class="mb-2">
                                            <small class="text-muted">
                                                <span id="timer">00:00</span> / <span id="timeLimit">@(Model.TimeLimitSeconds / 60):@(Model.TimeLimitSeconds % 60).ToString("00")</span>
                                            </small>
                                        </div>
                                        <div class="progress mb-2" style="height: 25px;">
                                            <div id="progressBar" class="progress-bar progress-bar-striped progress-bar-animated" 
                                                 role="progressbar" style="width: 0%"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 text-end">
                                    <button id="btnSubmit" class="btn btn-success btn-lg" disabled>
                                        <i class="bi bi-check-circle"></i> Nộp bài
                                    </button>
                                </div>
                            </div>
                            <div id="recordingStatus" class="alert alert-warning mt-3" style="display: none;">
                                <i class="bi bi-hourglass-split"></i> <span id="statusText">Đang xử lý...</span>
                            </div>
                        </div>
                    </div>

                    <!-- Instructions -->
                    <div class="alert alert-light">
                        <h6><i class="bi bi-info-circle"></i> Hướng dẫn:</h6>
                        <ol class="mb-0">
                            <li>Đọc kỹ văn bản mẫu ở trên</li>
                            <li>Nhấn nút "Bắt đầu ghi âm" và nói theo văn bản mẫu</li>
                            <li>Bạn có thể nghe lại bản ghi âm trước khi nộp bài</li>
                            <li>Nhấn "Nộp bài" để AI chấm điểm tự động</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<audio id="audioPlayback" style="display: none;"></audio>

@section Scripts {
    <script>
        let mediaRecorder;
        let audioChunks = [];
        let audioBlob;
        let startTime;
        let timerInterval;
        let isRecording = false;
        const timeLimit = @Model.TimeLimitSeconds;
        const lessonId = @Model.LessonId;

        const btnRecord = document.getElementById('btnRecord');
        const btnStop = document.getElementById('btnStop');
        const btnPlay = document.getElementById('btnPlay');
        const btnSubmit = document.getElementById('btnSubmit');
        const recordText = document.getElementById('recordText');
        const timer = document.getElementById('timer');
        const progressBar = document.getElementById('progressBar');
        const recordingStatus = document.getElementById('recordingStatus');
        const statusText = document.getElementById('statusText');
        const audioPlayback = document.getElementById('audioPlayback');

        // Request microphone access
        async function startRecording() {
            try {
                const stream = await navigator.mediaDevices.getUserMedia({ audio: true });
                mediaRecorder = new MediaRecorder(stream);
                audioChunks = [];

                mediaRecorder.ondataavailable = (event) => {
                    if (event.data.size > 0) {
                        audioChunks.push(event.data);
                    }
                };

                mediaRecorder.onstop = () => {
                    audioBlob = new Blob(audioChunks, { type: 'audio/webm' });
                    const audioUrl = URL.createObjectURL(audioBlob);
                    audioPlayback.src = audioUrl;
                    btnPlay.disabled = false;
                    btnSubmit.disabled = false;
                    
                    // Stop all tracks
                    stream.getTracks().forEach(track => track.stop());
                };

                mediaRecorder.start();
                isRecording = true;
                startTime = Date.now();
                
                btnRecord.disabled = true;
                btnStop.disabled = false;
                recordText.textContent = 'Đang ghi âm...';
                btnRecord.classList.remove('btn-danger');
                btnRecord.classList.add('btn-danger', 'pulse');

                // Start timer
                timerInterval = setInterval(updateTimer, 1000);
            } catch (error) {
                console.error('Error accessing microphone:', error);
                alert('Không thể truy cập microphone. Vui lòng kiểm tra quyền truy cập.');
            }
        }

        function stopRecording() {
            if (mediaRecorder && isRecording) {
                mediaRecorder.stop();
                isRecording = false;
                
                btnRecord.disabled = false;
                btnStop.disabled = true;
                recordText.textContent = 'Bắt đầu ghi âm';
                btnRecord.classList.remove('pulse');
                
                if (timerInterval) {
                    clearInterval(timerInterval);
                }
            }
        }

        function updateTimer() {
            const elapsed = Math.floor((Date.now() - startTime) / 1000);
            const minutes = Math.floor(elapsed / 60);
            const seconds = elapsed % 60;
            timer.textContent = `${minutes}:${seconds.toString().padStart(2, '0')}`;
            
            const progress = (elapsed / timeLimit) * 100;
            progressBar.style.width = Math.min(progress, 100) + '%';
            
            if (elapsed >= timeLimit) {
                stopRecording();
                alert('Đã hết thời gian!');
            }
        }

        btnRecord.addEventListener('click', startRecording);
        btnStop.addEventListener('click', stopRecording);

        btnPlay.addEventListener('click', () => {
            if (audioPlayback.src) {
                audioPlayback.play();
            }
        });

        btnSubmit.addEventListener('click', async () => {
            if (!audioBlob) {
                alert('Vui lòng ghi âm trước khi nộp bài!');
                return;
            }

            if (!confirm('Bạn có chắc chắn muốn nộp bài? Bạn sẽ không thể chỉnh sửa sau khi nộp.')) {
                return;
            }

            btnSubmit.disabled = true;
            recordingStatus.style.display = 'block';
            statusText.textContent = 'Đang xử lý và chấm điểm...';

            try {
                const formData = new FormData();
                formData.append('audioFile', audioBlob, 'recording.webm');
                formData.append('lessonId', lessonId);

                const response = await fetch('/Speaking/Evaluate', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    statusText.textContent = 'Chấm điểm thành công! Đang chuyển đến trang kết quả...';
                    setTimeout(() => {
                        window.location.href = `/Speaking/Result/${result.submissionId}`;
                    }, 1500);
                } else {
                    alert('Lỗi: ' + (result.message || 'Không thể chấm điểm'));
                    btnSubmit.disabled = false;
                    recordingStatus.style.display = 'none';
                }
            } catch (error) {
                console.error('Error submitting:', error);
                alert('Đã xảy ra lỗi khi nộp bài. Vui lòng thử lại.');
                btnSubmit.disabled = false;
                recordingStatus.style.display = 'none';
            }
        });

        // Highlight mispronounced words (will be used in result page)
        function highlightWords(text, mispronouncedWords) {
            let highlightedText = text;
            mispronouncedWords.forEach(word => {
                const regex = new RegExp(`\\b${word}\\b`, 'gi');
                highlightedText = highlightedText.replace(regex, `<mark class="bg-danger text-white">${word}</mark>`);
            });
            return highlightedText;
        }
    </script>

    <style>
        .pulse {
            animation: pulse 1.5s ease-in-out infinite;
        }

        @@keyframes pulse {
            0%, 100% {
                opacity: 1;
            }
            50% {
                opacity: 0.5;
            }
        }

        .sticky-top {
            position: sticky;
        }
    </style>
}



