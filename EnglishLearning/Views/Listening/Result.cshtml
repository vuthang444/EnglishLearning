@model CommonLib.DTOs.SubmissionResultDto

@{
    ViewData["Title"] = "Kết quả bài nghe";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var lesson = ViewBag.Lesson as CommonLib.Entities.Lesson;
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">
                        <i class="bi bi-check-circle"></i> Kết quả bài làm
                    </h3>
                    @if (lesson != null)
                    {
                        <p class="mb-0 mt-2">@lesson.Title</p>
                    }
                </div>
                <div class="card-body">
                    <!-- Tổng điểm -->
                    <div class="text-center mb-4">
                        <div class="display-1 fw-bold @(Model.Percentage >= 70 ? "text-success" : Model.Percentage >= 50 ? "text-warning" : "text-danger")">
                            @Model.Score/@Model.MaxScore
                        </div>
                        <div class="h4 text-muted">
                            @Model.Percentage% - 
                            @if (Model.Percentage >= 90) { <span class="text-success">Xuất sắc!</span> }
                            else if (Model.Percentage >= 70) { <span class="text-success">Tốt!</span> }
                            else if (Model.Percentage >= 50) { <span class="text-warning">Khá</span> }
                            else { <span class="text-danger">Cần cố gắng thêm</span> }
                        </div>
                        @if (Model.TimeSpentSeconds > 0)
                        {
                            <p class="text-muted mt-2">
                                <i class="bi bi-clock"></i> Thời gian làm bài: @TimeSpan.FromSeconds(Model.TimeSpentSeconds).ToString(@"mm\:ss")
                            </p>
                        }
                    </div>

                    <hr />

                    <!-- Chi tiết từng câu -->
                    <h5 class="mb-3">
                        <i class="bi bi-list-check"></i> Chi tiết câu trả lời
                    </h5>
                    <div id="questionResults">
                        @for (int i = 0; i < Model.QuestionResults.Count; i++)
                        {
                            var result = Model.QuestionResults[i];
                            <div class="card mb-3 @(result.IsCorrect ? "border-success" : "border-danger")">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h6 class="mb-0">
                                            <span class="badge @(result.IsCorrect ? "bg-success" : "bg-danger") me-2">
                                                Câu @(i + 1)
                                            </span>
                                            @result.Question
                                        </h6>
                                        <span class="badge @(result.IsCorrect ? "bg-success" : "bg-danger")">
                                            @if (result.IsCorrect)
                                            {
                                                <text><i class="bi bi-check-circle"></i> Đúng</text>
                                            }
                                            else
                                            {
                                                <text><i class="bi bi-x-circle"></i> Sai</text>
                                            }
                                        </span>
                                    </div>
                                    
                                    <div class="mt-3">
                                        <p class="mb-1">
                                            <strong>Đáp án của bạn:</strong> 
                                            <span class="@(result.IsCorrect ? "text-success" : "text-danger")">
                                                @(string.IsNullOrEmpty(result.SelectedAnswer) ? "Chưa trả lời" : result.SelectedAnswer)
                                            </span>
                                        </p>
                                        @if (!result.IsCorrect)
                                        {
                                            <p class="mb-0">
                                                <strong>Đáp án đúng:</strong> 
                                                <span class="text-success">@result.CorrectAnswer</span>
                                            </p>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="text-center mt-4">
                        <a href="@Url.Action("Dashboard", "Home")" class="btn btn-primary">
                            <i class="bi bi-house"></i> Về trang chủ
                        </a>
                        @if (lesson != null)
                        {
                            <a href="@Url.Action("Exercise", "Listening", new { lessonId = lesson.Id })" class="btn btn-outline-primary">
                                <i class="bi bi-arrow-repeat"></i> Làm lại
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

