<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EnglishLearning</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #f5f7fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .dashboard-container {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar */
        .sidebar {
            width: 280px;
            background-color: white;
            box-shadow: 2px 0 10px rgba(0,0,0,0.05);
            position: fixed;
            height: 100vh;
            overflow-y: auto;
            z-index: 1000;
        }

        .sidebar-header {
            padding: 20px;
            border-bottom: 1px solid #e9ecef;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .sidebar-logo {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, #4A90E2 0%, #2E5C8A 100%);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            font-size: 1.2rem;
        }

        .sidebar-brand {
            font-size: 1.3rem;
            font-weight: 700;
            color: #2E5C8A;
        }

        .sidebar-menu {
            padding: 20px 0;
        }

        .menu-section {
            padding: 0 20px;
            margin-bottom: 30px;
        }

        .menu-section-title {
            font-size: 0.85rem;
            font-weight: 600;
            color: #6c757d;
            text-transform: uppercase;
            margin-bottom: 15px;
            padding: 0 15px;
        }

        .menu-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 15px;
            margin-bottom: 5px;
            border-radius: 8px;
            color: #495057;
            text-decoration: none;
            transition: all 0.3s ease;
            font-weight: 500;
        }

        .menu-item:hover {
            background-color: #f0f7ff;
            color: #4A90E2;
        }

        .menu-item.active {
            background-color: #e7f3ff;
            color: #4A90E2;
            border-left: 3px solid #4A90E2;
        }

        .menu-item i {
            width: 20px;
            font-size: 1.1rem;
        }

        .menu-item-back {
            margin-top: auto;
            padding-top: 20px;
            border-top: 1px solid #e9ecef;
        }

        /* Main Content */
        .main-content {
            flex: 1;
            margin-left: 280px;
            padding: 30px;
        }

        .top-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            background: white;
            padding: 15px 25px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }

        .top-bar-right {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .notification-icon {
            position: relative;
            cursor: pointer;
        }

        .notification-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            background: #dc3545;
            color: white;
            border-radius: 50%;
            width: 18px;
            height: 18px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.7rem;
            font-weight: bold;
        }

        .profile-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: linear-gradient(135deg, #4A90E2 0%, #2E5C8A 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            cursor: pointer;
        }

        /* Content Cards */
        .content-card {
            background: white;
            border-radius: 12px;
            padding: 25px;
            margin-bottom: 25px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        }

        .card-title {
            font-size: 1.3rem;
            font-weight: 600;
            color: #2E5C8A;
            margin-bottom: 20px;
        }

        @@media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
                transition: transform 0.3s ease;
            }

            .sidebar.open {
                transform: translateX(0);
            }

            .main-content {
                margin-left: 0;
                padding: 15px;
            }
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="sidebar-header">
                <div class="sidebar-logo">E</div>
                <div class="sidebar-brand">PREP</div>
            </div>

            <div class="sidebar-menu">
                <div class="menu-section">
                    <div class="menu-section-title">Chương trình bạn chọn</div>
                    <select class="form-select form-select-sm" style="margin: 0 15px; margin-bottom: 20px;">
                        <option>IELTS</option>
                        <option>TOEFL</option>
                        <option>TOEIC</option>
                    </select>
                </div>

                <div class="menu-section">
                    <a href="@Url.Action("Dashboard", "Home")" class="menu-item active">
                        <i class="bi bi-house-door"></i>
                        <span>Tổng quan</span>
                    </a>
                    <a href="#" class="menu-item">
                        <i class="bi bi-calendar-check"></i>
                        <span>Study plan</span>
                    </a>
                    <a href="#" class="menu-item">
                        <i class="bi bi-book"></i>
                        <span>My courses</span>
                    </a>
                    <a href="#" class="menu-item">
                        <i class="bi bi-clipboard-check"></i>
                        <span>Test Practice</span>
                    </a>
                    <a href="#" class="menu-item">
                        <i class="bi bi-person-badge"></i>
                        <span>Learning Profile</span>
                    </a>
                </div>

                <div class="menu-section menu-item-back">
                    <a href="@Url.Action("Index", "Home")" class="menu-item">
                        <i class="bi bi-arrow-left"></i>
                        <span>Trở về trang chủ</span>
                    </a>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Top Bar -->
            <div class="top-bar">
                <div>
                    <h4 style="margin: 0; color: #2E5C8A;">Dashboard</h4>
                </div>
                <div class="top-bar-right">
                    <div class="notification-icon">
                        <i class="bi bi-bell" style="font-size: 1.3rem; color: #6c757d;"></i>
                        <span class="notification-badge">1</span>
                    </div>
                    <div class="profile-avatar">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @User.Identity.Name?.Substring(0, 1).ToUpper()
                        }
                    </div>
                </div>
            </div>

            <!-- Page Content -->
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

