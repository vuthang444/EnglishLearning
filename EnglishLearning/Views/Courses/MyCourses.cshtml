@model List<CommonLib.Entities.Order>
@{
    ViewData["Title"] = "Khóa học của tôi";
}
<div class="container py-4">
    <h2 class="mb-3"><i class="bi bi-collection"></i> Khóa học của tôi</h2>
    @if (Model == null || !Model.Any())
    {
        <p class="text-muted">Bạn chưa mua khóa học nào.</p>
        <a href="/Courses" class="btn btn-primary">Xem khóa học</a>
    }
    else
    {
        <ul class="list-group">
            @foreach (var o in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span>@(o.Course?.Title ?? "N/A")</span>
                    <span class="badge bg-success">Đã thanh toán</span>
                </li>
            }
        </ul>
    }
</div>

